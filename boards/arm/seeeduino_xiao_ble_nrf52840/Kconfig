config BOARD_ENABLE_DCDC
	bool "Enable DCDC mode"
	select SOC_DCDC_NRF52X
	default y
	depends on BOARD_SEEEDUINO_XIAO_BLE_NRF52840 || BOARD_SEEEDUINO_XIAO_BLE_NRF52840_SENSE
